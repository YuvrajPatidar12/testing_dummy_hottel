<div class="container mt-4">
  <p style="color: green"><%= notice %></p>
  <h2>All Hotels</h2>
  <% if can? :create, Hotel %>
    <div>
      <%= link_to "New hotel", new_hotel_path, class: 'btn btn-primary mb-3 end-0' %>
    </div>
  <% end %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead class="table-primary">
        <tr>          
          <th>Name</th>
          <th>Email</th>
          <th>Tele-Phone</th>
          <th>Location</th>
          <th>City</th>
          <th>State</th>
          <th>Zipcode</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody> 
        <% @hotels.each do |hotel| %>
          <tr>
            <td><%= hotel.name %></td>
            <td><%= hotel.email %></td>
            <td><%= hotel.telephone %></td>
            <td><%= hotel.location %></td>
            <td><%= hotel.city %></td>
            <td><%= hotel.state %></td>
            <td><%= hotel.zipcode %></td>
            <td><%= link_to hotel do %>
              <i class="fas fa-eye fa-2x"></i>
              <% end %> 
        <% end %>
      </tbody>
    </table>
  </div>
</div>

